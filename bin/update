#!/bin/bash

parent_path=$( cd "$(dirname "${BASH_SOURCE}")" ; pwd -P )
cd "$parent_path"

cd ../parsers

for f in *; do
    if [ -d ${f} ]; then
        echo "Running update script for the $f parser"
        cd $f
        ./update.sh
        cd ..
    fi
done

echo "Done updating the parsers"

cd ../tests

for f in *; do
    if [ -d ${f} ]; then
        echo "Running update script for the $f test suite"
        cd $f
        ./update.sh
        cd ..
    fi
done

echo "Done updating the test suites"
